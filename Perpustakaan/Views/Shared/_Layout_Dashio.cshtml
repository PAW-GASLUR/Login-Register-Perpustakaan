
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <!-- Favicons -->
    <link href="~/lib/Content/img/1.jpg" rel="icon">
    <link href="~/lib/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap core CSS -->
    <link href="~/lib/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--external css-->
    <link href="~/lib/Content/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/lib/Content/css/zabuto_calendar.css">
    <link rel="stylesheet" type="text/css" href="~/lib/Content/lib/gritter/css/jquery.gritter.css" />
    <!-- Custom styles for this template -->
    <link href="~/lib/Content/css/style.css" rel="stylesheet">
    <link href="~/lib/Content/css/style-responsive.css" rel="stylesheet">
    <script src="~/lib/Content/lib/chart-master/Chart.js"></script>


</head>

<body>
    <section id="container">
        <!--header start-->
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Klik Disini"></div>
            </div>
            <!--logo start-->
            <a href="@Url.Action("Index", "Home")" class="logo"><b>PERPUS<span>TAKAAN</span></b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->


            </div>
            <div class="top-menu">
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </header>
        <!--header end-->
        <!-- **********************************************************************************************************************************************************
            MAIN SIDEBAR MENU
            *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <p class="centered"><a href="profile.html"><img src="~/lib/Content/img/resep.jpg" class="img-circle" width="80"></a></p>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-desktop"></i>
                            <span>Menu</span>
                        </a>
                        <ul class="sub">
                            @if (User.IsInRole("Staff"))
                            {
                                <li><a asp-area="" asp-controller="Role" asp-action="Index">Role</a></li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Daftar Perpustakaan<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-area="" asp-controller="Bukus" asp-action="Index">Buku</a></li>
                                        <li><a asp-area="" asp-controller="Genders" asp-action="Index">Gender</a></li>
                                        <li><a asp-area="" asp-controller="KondisiBukus" asp-action="Index">KondisiBuku</a></li>
                                        <li><a asp-area="" asp-controller="Mahasiswas" asp-action="Index">Mahasiswa</a></li>
                                        <li><a asp-area="" asp-controller="Peminjamen" asp-action="Index">Peminjamen</a></li>
                                        <li><a asp-area="" asp-controller="Pengembalians" asp-action="Index">Pengembalian</a></li>
                                        <li><a asp-area="" asp-controller="Raks" asp-action="Index">Rak</a></li>
                                        <li><a asp-area="" asp-controller="KatalogBukus" asp-action="Index">Katalog Buku</a></li>
                                    </ul>
                                </li>

                            }
                            else if (User.IsInRole("Mahasiswa"))
                            {
                                <li><a asp-area="" asp-controller="Role" asp-action="Index">Role</a></li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Daftar Perpustakaan<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-area="" asp-controller="Bukus" asp-action="Index">Buku</a></li>

                                        <li><a asp-area="" asp-controller="Peminjamen" asp-action="Index">Peminjamen</a></li>
                                        <li><a asp-area="" asp-controller="Pengembalians" asp-action="Index">Pengembalian</a></li>

                                    </ul>
                                </li>


                            }
                        </ul>
                    </li>
                    <li class="mt">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-dashboard"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Contact", "Home")">
                            <i class="fa fa-cogs"></i>
                            <span>Contact</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("About", "Home")">
                            <i class="fa fa-book"></i>
                            <span>About</span>
                        </a>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!-- **********************************************************************************************************************************************************
            MAIN CONTENT
            *********************************************************************************************************************************************************** -->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-9 main-chart">
                        <!--CUSTOM CHART START -->

                        @RenderBody()

                    </div>
                    <!-- /col-lg-9 END SECTION MIDDLE -->
                    <!-- **********************************************************************************************************************************************************
                        RIGHT SIDEBAR CONTENT
                        *********************************************************************************************************************************************************** -->
                    <!-- /col-lg-3 -->
                </div>
                <!-- /row -->
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                <p>
                    &copy; Copyrights <strong>Rental Kendaraan HAW19</strong>. All Rights Reserved
                </p>
                <div class="credits">

                    Created with Dashio template by <a href="https://templatemag.com/">TemplateMag</a>
                </div>
                <a href="index.html#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/lib/Content/lib/jquery/jquery.min.js"></script>

    <script src="~/lib/Content/lib/bootstrap/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/lib/Content/lib/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/lib/Content/lib/jquery.scrollTo.min.js"></script>
    <script src="~/lib/Content/lib/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/lib/Content/lib/jquery.sparkline.js"></script>
    <!--common script for all pages-->
    <script src="~/lib/Content/lib/common-scripts.js"></script>
    <script type="text/javascript" src="~/lib/Content/lib/gritter/js/jquery.gritter.js"></script>
    <script type="text/javascript" src="~/lib/Content/lib/gritter-conf.js"></script>
    <!--script for this page-->
    <script src="~/lib/Content/lib/sparkline-chart.js"></script>
    <script src="~/lib/Content/lib/zabuto_calendar.js"></script>

    @RenderSection("scripts", required: false)
</body>

</html>